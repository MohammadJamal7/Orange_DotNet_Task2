@model List<Orange_DotNet_Task2.Models.Category>



    <h2 class="mb-5 text-center">List of Categories</h2>

<form asp-action="Create" method="get">
    <button type="submit" class="btn btn-outline-success">Create</button>
</form>

<table class="table table-dotted align-middle">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var Cat in Model)
        {
            <tr>
                <td>@Cat.Id</td>
                <td>@Cat.Name</td>
                <td>
                    <img src="@Cat.imagePath" alt="Uploaded Image" style="max-width: 60px; max-height: 60px;" />
                </td>
                <td>
                    <!-- Delete Form -->
                    <form asp-action="Delete" method="post" style="display:inline;">
                        
                        <input type="hidden" name="id" value="@Cat.Id" />
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
